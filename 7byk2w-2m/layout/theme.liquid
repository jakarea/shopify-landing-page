<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
  <title>{{ page_title }} - Vinted Tracker Pro</title>
  <meta name="description" content="{{ page_description | default: 'Vinted Tracker Pro - Sell Smart on Vinted. Track inventory, analytics, and profits with ease.' }}">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="{{ 'img/favicon.png' | asset_url }}">

  <!-- Preconnect to external domains -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="dns-prefetch" href="https://cdn.tailwindcss.com">

  <!-- Google Fonts - display=swap for instant rendering -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com" defer></script>
  <script>
    window.tailwindConfig = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'system-ui', 'sans-serif'],
            heading: ['Poppins', 'system-ui', 'sans-serif'],
          }
        }
      }
    }
  </script>

  <!-- Theme CSS -->
  {{ 'application.css' | asset_url | stylesheet_tag }}

  <!-- Skip to main content link for accessibility -->
  <style>
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
    .sr-only:focus {
      position: static;
      width: auto;
      height: auto;
      padding: inherit;
      margin: inherit;
      overflow: visible;
      clip: auto;
      white-space: normal;
    }
  </style>

  {{ content_for_header }}
</head>
<body>
  <a href="#main-content" class="sr-only">Skip to main content</a>
  <div id="main-content" class="flex flex-col min-h-screen">
    {{ content_for_layout }}
  </div>

  <!-- Translations JS - deferred for performance -->
  {{ 'translations.js' | asset_url | script_tag | default: '' }}

  <!-- Theme JS - deferred for performance -->
  {{ 'application.js' | asset_url | script_tag | default: '' }}
</body>
</html>
