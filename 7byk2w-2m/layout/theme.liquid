<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
  <title>{{ page_title }} - Vinted Tracker Pro</title>
  <meta name="description" content="{{ page_description | default: 'Vinted Tracker Pro - Sell Smart on Vinted. Track inventory, analytics, and profits with ease.' }}">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="{{ 'favicon.png' | asset_url }}">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'system-ui', 'sans-serif'],
            heading: ['Poppins', 'system-ui', 'sans-serif'],
          }
        }
      }
    }
  </script>

  <!-- Theme CSS -->
  {{ 'application.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}
</head>
<body>
  <div class="flex flex-col min-h-screen">
    {{ content_for_layout }}
  </div>

  <!-- Theme JS - loaded after content for proper DOM access -->
  {{ 'application.js' | asset_url | script_tag }}
</body>
</html>
