<script>
  // Planner Carousel functionality - runs immediately when section loads
  (function() {
    const plannerCarousel = document.getElementById('planner-carousel');
    if (!plannerCarousel) {
      // Retry after a short delay in case section isn't fully loaded
      setTimeout(arguments.callee, 100);
      return;
    }
    const plannerItems = plannerCarousel.querySelectorAll('.carousel-item');
    const plannerDots = document.getElementById('planner-dots');
    let isScrolling = false;
    let startX = 0;
    let scrollLeft = 0;
    // Function to update dots based on scroll position
    function updateDots() {
      const scrollPosition = plannerCarousel.scrollLeft;
      const itemWidth = plannerCarousel.offsetWidth;
      const currentIndex = Math.round(scrollPosition / itemWidth);
      if (plannerDots) {
        plannerDots.querySelectorAll('.carousel-dot').forEach((dot, index) => {
          if (index === currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }
    // Update dots on scroll
    plannerCarousel.addEventListener('scroll', updateDots);
    // Touch/drag support
    plannerCarousel.addEventListener('mousedown', function(e) {
      isScrolling = true;
      startX = e.pageX - plannerCarousel.offsetLeft;
      scrollLeft = plannerCarousel.scrollLeft;
    });
    plannerCarousel.addEventListener('mouseleave', function() {
      isScrolling = false;
    });
    plannerCarousel.addEventListener('mouseup', function() {
      isScrolling = false;
    });
    plannerCarousel.addEventListener('mousemove', function(e) {
      if (!isScrolling) return;
      e.preventDefault();
      const x = e.pageX - plannerCarousel.offsetLeft;
      const walk = (x - startX) * 2;
      plannerCarousel.scrollLeft = scrollLeft - walk;
    });
    // Touch events for mobile
    plannerCarousel.addEventListener('touchstart', function(e) {
      isScrolling = true;
      startX = e.touches[0].pageX - plannerCarousel.offsetLeft;
      scrollLeft = plannerCarousel.scrollLeft;
    });
    plannerCarousel.addEventListener('touchend', function() {
      isScrolling = false;
    });
    plannerCarousel.addEventListener('touchmove', function(e) {
      if (!isScrolling) return;
      const x = e.touches[0].pageX - plannerCarousel.offsetLeft;
      const walk = (x - startX) * 2;
      plannerCarousel.scrollLeft = scrollLeft - walk;
    });
    // Global function to go to specific slide
    window.goToSlide = function(index) {
      const totalItems = plannerItems.length;
      if (index < 0) index = totalItems - 1;
      if (index >= totalItems) index = 0;
      const itemWidth = plannerCarousel.offsetWidth;
      plannerCarousel.scrollTo({
        left: itemWidth * index,
        behavior: 'smooth'
      });
      // Update dots
      if (plannerDots) {
        plannerDots.querySelectorAll('.carousel-dot').forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    };
    // Get current slide index
    window.getCurrentSlide = function() {
      const scrollPosition = plannerCarousel.scrollLeft;
      const itemWidth = plannerCarousel.offsetWidth;
      return Math.round(scrollPosition / itemWidth);
    };
    // Initialize dots on page load
    updateDots();
  })();
</script>
