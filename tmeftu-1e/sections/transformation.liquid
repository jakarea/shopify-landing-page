<section class="section" style="background: var(--background);">
  <div class="container"><div class="max-w-6xl">
    <div class="section-header"><span class="section-label" data-translate="transformation_section_label">{{ section.settings.section_label }}</span><h2 class="section-title" data-translate="transformation_section_title">{{ section.settings.trans_title }}</h2><p class="section-subtitle" data-translate="transformation_section_subtitle">{{ section.settings.subtitle }}</p></div>
    <div class="beforeafter-grid">
      <div class="ba-card before"><img src="{{ 'images/jp_before.webp' | asset_url }}" alt="{{ section.settings.before_alt }}" data-translate-alt="transformation_before_alt" loading="lazy"><div class="ba-badge"><i class="fas fa-times"></i> <span data-translate="label_before">{{ section.settings.trans_before_badge }}</span></div><div class="ba-content"><h3 data-translate="transformation_before_title">{{ section.settings.before_title }}</h3><ul><li><i class="fas fa-times"></i> <span data-translate="transformation_pain_point_1">{{ section.settings.trans_pain_point_1 }}</span></li><li><i class="fas fa-times"></i> <span data-translate="transformation_pain_point_2">{{ section.settings.trans_pain_point_2 }}</span></li><li><i class="fas fa-times"></i> <span data-translate="transformation_pain_point_3">{{ section.settings.trans_pain_point_3 }}</span></li><li><i class="fas fa-times"></i> <span data-translate="transformation_pain_point_4">{{ section.settings.trans_pain_point_4 }}</span></li></ul></div></div>
      <div class="ba-card after"><img src="{{ 'images/jp_after.webp' | asset_url }}" alt="{{ section.settings.after_alt }}" data-translate-alt="transformation_after_alt" loading="lazy"><div class="ba-badge"><i class="fas fa-check"></i> <span data-translate="label_after">{{ section.settings.trans_after_badge }}</span></div><div class="ba-content"><h3 data-translate="transformation_after_title">{{ section.settings.after_title }}</h3><ul><li><i class="fas fa-check"></i> <span data-translate="transformation_benefit_1">{{ section.settings.trans_benefit_1 }}</span></li><li><i class="fas fa-check"></i> <span data-translate="transformation_benefit_2">{{ section.settings.trans_benefit_2 }}</span></li><li><i class="fas fa-check"></i> <span data-translate="transformation_benefit_3">{{ section.settings.trans_benefit_3 }}</span></li><li><i class="fas fa-check"></i> <span data-translate="transformation_benefit_4">{{ section.settings.trans_benefit_4 }}</span></li></ul></div></div>
    </div>
  </div></div>
</section>

