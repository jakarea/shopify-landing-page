<section class="section section-muted">
	<div class="container">
		<div class="max-w-6xl">
			<div class="section-header">
				<span class="section-label" data-translate="problem_section_label">{{ section.settings.section_label }}</span>
				<h2 class="section-title" data-translate="problem_section_title">{{ section.settings.title }}</h2>
			</div>
			<div class="problem-grid">
				<div class="problem-card">
					<div class="icon"><i class="fas {{ section.settings.card_1_icon }}"></i></div>
					<h3 data-translate="problem_card_1_title">{{ section.settings.card_1_title }}</h3>
					<p data-translate="problem_card_1_desc">{{ section.settings.card_1_desc }}</p>
				</div>
				<div class="problem-card">
					<div class="icon"><i class="fas {{ section.settings.card_2_icon }}"></i></div>
					<h3 data-translate="problem_card_2_title">{{ section.settings.card_2_title }}</h3>
					<p data-translate="problem_card_2_desc">{{ section.settings.card_2_desc }}</p>
				</div>
				<div class="problem-card">
					<div class="icon"><i class="fas {{ section.settings.card_3_icon }}"></i></div>
					<h3 data-translate="problem_card_3_title">{{ section.settings.card_3_title }}</h3>
					<p data-translate="problem_card_3_desc">{{ section.settings.card_3_desc }}</p>
				</div>
				<div class="problem-card">
					<div class="icon"><i class="fas {{ section.settings.card_4_icon }}"></i></div>
					<h3 data-translate="problem_card_4_title">{{ section.settings.card_4_title }}</h3>
					<p data-translate="problem_card_4_desc">{{ section.settings.card_4_desc }}</p>
				</div>
				<div class="problem-card">
					<div class="icon"><i class="fas {{ section.settings.card_5_icon }}"></i></div>
					<h3 data-translate="problem_card_5_title">{{ section.settings.card_5_title }}</h3>
					<p data-translate="problem_card_5_desc">{{ section.settings.card_5_desc }}</p>
				</div>
				<div class="problem-card">
					<div class="icon"><i class="fas {{ section.settings.card_6_icon }}"></i></div>
					<h3 data-translate="problem_card_6_title">{{ section.settings.card_6_title }}</h3>
					<p data-translate="problem_card_6_desc">{{ section.settings.card_6_desc }}</p>
				</div>
			</div>
			<div class="solution-box">
				<div>
					<div class="solution-badge"><i class="fas fa-lightbulb"></i> <span data-translate="problem_solution_badge">{{ section.settings.solution_badge }}</span></div>
					<h3 data-translate="problem_solution_title">{{ section.settings.solution_title }}</h3>
					<p data-translate="problem_solution_desc">{{ section.settings.solution_desc }}</p>
					<ul class="solution-features">
						<li><i class="fas fa-check-circle"></i> <span data-translate="problem_solution_feature_1">{{ section.settings.solution_feature_1 }}</span></li>
						<li><i class="fas fa-check-circle"></i> <span data-translate="problem_solution_feature_2">{{ section.settings.solution_feature_2 }}</span></li>
						<li><i class="fas fa-check-circle"></i> <span data-translate="problem_solution_feature_3">{{ section.settings.solution_feature_3 }}</span></li>
						<li><i class="fas fa-check-circle"></i> <span data-translate="problem_solution_feature_4">{{ section.settings.solution_feature_4 }}</span></li>
					</ul>
				</div>
				<div class="solution-image">
					{% if section.settings.preview_image %}
					<img src="{{ section.settings.preview_image | image_url: width: 800 }}" alt="{{ section.settings.preview_alt }}" data-translate-alt="problem_preview_alt" loading="lazy">
					{% else %}
					<img src="{{ 'images/jp_3_1.webp' | asset_url }}" alt="{{ section.settings.preview_alt }}" data-translate-alt="problem_preview_alt" loading="lazy">
					{% endif %}
					<div class="badge" data-translate="problem_preview_badge">{{ section.settings.preview_badge }}</div>
				</div>
			</div>
		</div>
	</div>
</section>

