  const products = [];
  document.querySelectorAll('.price[data-variant-id]').forEach(function(el) {
    const variantId = el.getAttribute('data-variant-id');
    if (variantId && !variantId.includes('-compare')) {
      const productCard = el.closest('.product-card');
      const compareEl = productCard ? productCard.querySelector('.original-price[data-variant-id="' + variantId + '-compare"]') : null;
      const eurPrice = parseFloat(el.getAttribute('data-price-eur') || '0');
      products.push({
        variantId: variantId,
        priceEl: el,
        compareEl: compareEl,
        eurPrice: eurPrice,
        hasCompare: compareEl !== null
      });
    }
  });
  if (products.length === 0) {
    return;
  }
  // Function to format and set price
  function setProductPrice(product, priceEur, currentCurrency) {
    if (!product.priceEl) return;
    product.priceEl.classList.remove('price-loading');
    product.priceEl.dataset.priceBase = 'EUR';
    product.priceEl.dataset.priceEur = priceEur.toString();

    if (typeof window.CurrencyManager !== 'undefined' && window.CurrencyManager.formatPrice) {
      const formatted = window.CurrencyManager.formatPrice(priceEur, currentCurrency);
      // Only update if formatted price is valid (not 0 or empty)
      if (formatted && !formatted.match(/^[\\$]\s*0$/)) {
        product.priceEl.textContent = formatted;
      }
    } else {
      // Fallback formatting
      const symbol = currentCurrency === 'EUR' ? '' : '$';
      product.priceEl.textContent = symbol + Math.round(priceEur).toLocaleString();
    }
    // Handle compare price
    if (product.compareEl) {
      const compareEurPrice = parseFloat(product.compareEl.getAttribute('data-price-eur') || '0');
      if (compareEurPrice > 0) {
        product.compareEl.dataset.priceEur = compareEurPrice.toString();
        product.compareEl.classList.remove('price-loading');
        if (typeof window.CurrencyManager !== 'undefined' && window.CurrencyManager.formatPrice) {
          const formattedCompare = window.CurrencyManager.formatPrice(compareEurPrice, currentCurrency);
          if (formattedCompare && !formattedCompare.match(/^[\\$]\s*0$/)) {
            product.compareEl.textContent = formattedCompare;
          }
        } else {
          const symbol = currentCurrency === 'EUR' ? '' : '$';
          product.compareEl.textContent = symbol + Math.round(compareEurPrice).toLocaleString();
        }
      } else {
        product.compareEl.classList.remove('price-loading');
      }
    }
  }
  // Initialize prices
  function initializePrices() {
    const currentCurrency = (typeof window.CurrencyManager !== 'undefined')
      ? window.CurrencyManager.getCurrentCurrency()
      : 'EUR';
    products.forEach(product => {
      if (product.eurPrice > 0) {
        setProductPrice(product, product.eurPrice, currentCurrency);
      } else {
        // No EUR price available, remove spinner
        if (product.priceEl) product.priceEl.classList.remove('price-loading');
        if (product.compareEl) product.compareEl.classList.remove('price-loading');
      }
    });
  }
  // Wait for CurrencyManager then initialize
  if (typeof window.CurrencyManager !== 'undefined') {
    const waitForRates = setInterval(() => {
      const rates = window.CurrencyManager.getRates();
      const currentCurrency = window.CurrencyManager.getCurrentCurrency();
      if (rates || currentCurrency) {
        clearInterval(waitForRates);
        initializePrices();
      }
    }, 100);
    // Fallback timeout
    setTimeout(() => {
      clearInterval(waitForRates);
      initializePrices();
    }, 3000);
  } else {
    // No CurrencyManager, initialize immediately
    initializePrices();
  }
})();
