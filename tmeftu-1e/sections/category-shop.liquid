(function() {
  const addToCartButtons = document.querySelectorAll('.category-add-to-cart');
  addToCartButtons.forEach(function(button) {
    // Prevent double-clicks with a flag
    let isAdding = false;
    button.addEventListener('click', async function(e) {
      e.preventDefault();
      // Prevent double-click
      if (isAdding) return;
      isAdding = true;
      const productId = this.getAttribute('data-product-id');
      const productTitle = this.getAttribute('data-product-title');
      const productTags = this.getAttribute('data-product-tags') || '';
      if (!productId || productId === 'null' || productId === '') {
        const unavailableMsg = window.getTranslation('category_shop_unavailable') || 'This product is not available. Please check the product settings.';
        alert(unavailableMsg);
        isAdding = false;
        return;
      }
      // Store original button state
      const originalButtonText = this.innerHTML;
      // Show loading state
      const addingText = window.getTranslation('category_shop_adding') || 'Adding...';
      this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ' + addingText;
      this.disabled = true;
      try {
        // Direct cart add (avoiding global function to prevent duplicate requests)
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: parseInt(productId), quantity: 1 })
        });
        if (!response.ok) {
          const errorText = await response.text();
          throw new Error(`Failed to add to cart: ${response.status} ${response.statusText}`);
        }
        const data = await response.json();
        // Show success state briefly
        const addedText = window.getTranslation('category_shop_added') || 'Added!';
        this.innerHTML = '<i class="fas fa-check"></i> ' + addedText;
        // Update cart UI
        if (typeof updateCartUI === 'function') {
          updateCartUI();
        }
        if (typeof toggleCart === 'function') {
          toggleCart();
        }
        // Reset button after delay
        setTimeout(() => {
          this.innerHTML = originalButtonText;
          this.disabled = false;
          isAdding = false;
        }, 2000);
      } catch (error) {
        const errorMsg = window.getTranslation('category_shop_error') || 'Failed to add item to cart. Please try again.';
        alert(error.message || errorMsg);
        // Reset button on error
        this.innerHTML = originalButtonText;
        this.disabled = false;
        isAdding = false;
      }
    });
  });
  // Hover effect on product cards
  const productCards = document.querySelectorAll('.product-card');
  productCards.forEach(function(card) {
    card.addEventListener('mouseenter', function() {
      const img = this.querySelector('.image img');
